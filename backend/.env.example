# ============================================================================
# StudyMaster Backend - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# Application
APP_NAME=StudyMaster API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database (Local Development - matches docker-compose.yml)
DATABASE_URL=postgresql://studymaster:devpass@localhost:5433/studymaster

# Database Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=False

# Supabase (Production - get from https://supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Anthropic Claude (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (add your frontend URLs)
CORS_ORIGINS=["http://localhost:8081","http://localhost:19006"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
FLASHCARD_GENERATION_LIMIT_PER_HOUR=10
MATERIAL_UPLOAD_LIMIT_PER_HOUR=20

# File Upload
MAX_FILE_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Testing
TESTING=False
